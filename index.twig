<!DOCTYPE HTML>
<html>
	<head>
	<meta charset="utf-8">
	<title>{{ site_title }}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="{{ meta.description|striptags }}">

	{% if config.icon_svg %}
		<link rel="icon" type="image/svg" href="{{ config.icon_svg }}">
		{% if config.icon_png %}
			<link rel="alternate icon" type="image/png" href="{{ config.icon_png }}">
		{% endif %}
	{% elseif config.icon_png %}
		<link rel="icon" type="image/png" href="{{ config.icon_png }}">
	{% endif %}

  	<!-- Social media integration -->
	<meta name="twitter:title" content="{{ site_title }}">
	<meta name="twitter:image" content="{{ meta.image }}">
	<meta name="twitter:url" content="{{ base_url }}">
	<meta name="twitter:card" content="summary_large_image">
	<meta property="og:title" content="{{ site_title }}">
	<meta property="og:image" content="{{ meta.image }}">
	<meta property="og:url" content="{{ base_url }}">
	<meta property="og:site_name" content="{{ site_title }}">
	<meta property="og:description" content="{{ meta.description|striptags }}">

	<!-- Animate.css -->
	<link rel="stylesheet" href="{{ theme_url }}/css/animate.css">
	<!-- Icomoon Icon Fonts-->
	<link rel="stylesheet" href="{{ theme_url }}/css/icomoon.css">
	<!-- Bootstrap  -->
	<link rel="stylesheet" href="{{ theme_url }}/css/bootstrap.css">
	<link rel="stylesheet" href="{{ theme_url }}/css/bootstrap-icons-1-9-1.css">
	<!-- Theme style  -->
	<link rel="stylesheet" href="{{ theme_url }}/css/style.css">

	</head>
	<body>
		
	<div class="fh5co-loader"></div>
	
	<div id="page">
		<div id="fh5co-aside" style="background-image: url({{ meta.image }})">
			<div class="overlay"></div>
			<nav role="navigation">
				<ul>
					<li><a href="{{ base_url }}"><i class="bi bi-house-door-fill" aria-label="Homepage"></i></a></li>
				</ul>
			</nav>
			<div class="featured">
				<h2>{{ meta.bio }}</h2>
			</div>
		</div>
		<div id="fh5co-main-content">
			<div class="fh5co-post">
{% for page in pages|reverse if not page.hidden %}
{% if page.meta.template == "single" %}
				<div class="fh5co-entry padding">
					<!--<a href="{{ page.url }}/" class="arrow"><i class="bi bi-arrow-right"></i></a>-->
					<div>
						<span class="fh5co-post-date">{{ page.date_formatted }}</span>
						<h2><a href="{{ page.url }}/">{{ page.title }}</a></h2>
						<p>{{ page.excerpt }}</p>
					</div>
				</div>
{% endif %}
{% endfor %}
				<footer>
					<div>
					{{ config.footnote }} | Design based on <a href="https://demos.freehtml5.co/story/" target="_blank">FreeHTML5.co/story</a> and <a href="https://besrourms.github.io" target="_blank">Mohamed Safouan Besrour</a>'s work.
					</div>
				</footer>
			</div>
		</div>
	</div>

	<div class="gototop js-top">
		<a href="#" class="js-gotop"><i class="bi bi-arrow-up" aria-label="Go To Top Of Page"></i></a>
	</div>
	
	<!-- jQuery -->
	<script src="{{ theme_url }}/js/jquery.min.js"></script>
	<!-- jQuery Easing -->
	<script defer src="{{ theme_url }}/js/jquery.easing.1.3.js"></script>
	<!-- Bootstrap -->
	<script defer src="{{ theme_url }}/js/bootstrap.min.js"></script>
	<!-- Waypoints -->
	<script defer src="{{ theme_url }}/js/jquery.waypoints.min.js"></script>
	<!-- Stellar Parallax -->
	<script src="{{ theme_url }}/js/jquery.stellar.min.js"></script>
	<!-- Main -->
	<script src="{{ theme_url }}/js/main.js"></script>

	</body>
</html>
